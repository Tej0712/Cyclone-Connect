<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#F16060">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/exercise_animation_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#F16060"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/exercise_arrow_icon"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_toEndOf="@id/exercise_animation_view">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_name_text_view"
                android:text="@string/exercise_name"
                android:textColor="@color/white"
                android:fontFamily="@font/abel"
                android:padding="8dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/exercise_time_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:padding="8dp"
                android:text="@string/time"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/exercise_calories_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:padding="8dp"
                android:text="@string/calories"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/exercise_id_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:padding="8dp"
                android:text="@string/exercise_id"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/exercise_arrow_icon"
            android:src="@drawable/ic_arrow_right"
            android:layout_centerInParent="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            app:tint="@color/white"
            android:contentDescription="@string/gotonext" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>